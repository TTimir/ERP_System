@model IEnumerable<DatabaseAccess.tblUserType>

@{
    string controllerName = "tblUserTypes";
    ViewBag.ControllerName = controllerName;
    ViewBag.MainTitle = "User Operations";
    ViewBag.Title = "All User Types";
}

<a href="@Url.Action("Create")" class="btn btn-primary m-b-20">
    <i class="icon-plus mr-1"></i> Add User Type
</a>

<div class="row clearfix">
    <div class="col-lg-12">
        <div class="card">
            <div class="body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>
                                @Html.DisplayNameFor(model => model.UserType)
                            </th>
                            <th>Action's</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Count(); i++)
                        {
                            var item = Model.ElementAt(i);
                            <tr>
                                <td>@(i + 1)</td> <!-- Serial Number Column -->
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserType)
                                </td>
                                <td>
                                    <a href="@Url.Action("Edit", new { id = item.UserTypeID })" class="btn btn-sm btn-icon btn-pure btn-default on-default m-r-5 button-edit" data-toggle="tooltip" data-original-title="Update">
                                        <i class="icon-pencil" aria-hidden="true"></i>
                                    </a>
                                    <a href="@Url.Action("Details", new { id = item.UserTypeID })" class="btn btn-sm btn-icon btn-pure btn-default on-default m-r-5 button-info" data-toggle="tooltip" data-original-title="Details">
                                        <i class="icon-info" aria-hidden="true"></i>
                                    </a>
                                    @*<a href="@Url.Action("Delete", new { id = item.UserTypeID })" class="btn btn-sm btn-icon btn-pure btn-default on-default button-remove" data-toggle="tooltip" data-original-title="Remove">
                                            <i class="icon-trash" aria-hidden="true"></i>
                                        </a>*@
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Sr.No</th>
                            <th>
                                @Html.DisplayNameFor(model => model.UserType)
                            </th>
                            <th>Actions</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>