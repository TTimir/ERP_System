@model IEnumerable<DatabaseAccess.tblAccountHead>

@{
    string controllerName = "tblAccountHeads";
    ViewBag.ControllerName = controllerName;
    ViewBag.MainTitle = "Account Opeartions";
    ViewBag.Title = "All Account Heads";
}

<a href="@Url.Action("Create")" class="btn btn-primary m-b-20">
    <i class="icon-plus mr-1"></i> Add Account Head
</a>


<div class="row clearfix">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover dataTable js-exportable">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>
                            Account Head
                        </th>
                        <th>
                            Head Code
                        </th>
                        <th>
                            Add (by)
                        </th>
                        <th>Action's</th>
                    </tr>

                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count(); i++)
                    {
                        var item = Model.ElementAt(i);
                        <tr>
                            <td>@(i + 1)</td> <!-- Serial Number Column -->
                            <td>
                                @Html.DisplayFor(modelItem => item.AccountHeadName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Code)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tblUser.FullName)
                            </td>
                            <td>
                                <a href="@Url.Action("Edit", new { id = item.AccountHeadID })" class="btn btn-sm btn-icon btn-pure btn-default on-default m-r-5 button-edit" data-toggle="tooltip" data-original-title="Update">
                                    <i class="icon-pencil"></i>
                                </a>
                                @*<a href="@Url.Action("Details", new { id = item.AccountHeadID })" class="btn btn-sm btn-icon btn-pure btn-default on-default m-r-5 button-info" data-toggle="tooltip" data-original-title="Details">
                                        <i class="icon-info"></i>
                                    </a>*@
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th>Sr.No</th>
                        <th>
                            Account Head
                        </th>
                        <th>
                            Head Code
                        </th>
                        <th>
                            User
                        </th>
                        <th>Action's</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>
