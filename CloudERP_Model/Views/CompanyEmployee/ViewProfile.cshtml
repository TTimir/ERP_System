@model DatabaseAccess.tblEmployee

@{
    string controllerName = "CompanyEmployee";
    ViewBag.ControllerName = controllerName;
    ViewBag.MainTitle = "Company Employee";
    ViewBag.Title = "View Profile";
}

<div class="row clearfix">
    <div class="col-lg-12">
        <div class="card">
            <div class="body">
                <dl class="row">

                    <dt class="col-sm-3 font-weight-bold">
                        Photo
                    </dt>

                    <dd class="col-sm-9">
                        @if (!string.IsNullOrEmpty(Model.Photo))
                        {
                            <img src="@Url.Content(Model.Photo)" class="img-fluid circle" alt="Employee Photo" style="width:70px;height:70px;max-width:100%;max-height:auto;" />
                        }
                    </dd>


                    <dt class="col-sm-3 font-weight-bold">
                        Employee Name
                    </dt>

                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Name)
                    </dd>

                    <dt class="col-sm-3 font-weight-bold">
                        Contact No
                    </dt>

                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.ContactNo)
                    </dd>

                    <dt class="col-sm-3 font-weight-bold">
                        Email
                    </dt>

                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Email)
                    </dd>
                    <dt class="col-sm-3 font-weight-bold">
                        Address
                    </dt>

                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Address)
                    </dd>

                    <dt class="col-sm-3 font-weight-bold">
                        Computerized National Identity Card (CNIC)
                    </dt>

                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.CNIC)
                    </dd>

                    <dt class="col-sm-3 font-weight-bold">
                        Designation
                    </dt>

                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Designation)
                    </dd>

                    <dt class="col-sm-3 font-weight-bold">
                        Description
                    </dt>

                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Description)
                    </dd>

                    <dt class="col-sm-3 font-weight-bold">
                        Monthly Salary
                    </dt>

                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.MonthlySalary)
                    </dd>

                    <dt class="col-sm-3 font-weight-bold">
                        Branch Name
                    </dt>

                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.tblBranch.BranchName)
                    </dd>
                </dl>

                <p>
                    <a href="@Url.Action("EmployeeUpdation", "CompanyEmployee", new { id = Model.EmployeeID })" class="btn btn-primary ml-3">
                        Edit info
                    </a>
                    <a href="@Url.Action("Employee", "CompanyEmployee")" class="btn btn-default">
                        <i class="icon-arrow-left mr-2"></i> Back
                    </a>
                </p>

            </div>
        </div>
    </div>
</div>