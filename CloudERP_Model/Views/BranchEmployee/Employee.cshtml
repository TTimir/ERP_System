@model IEnumerable<DatabaseAccess.tblEmployee>

@{
    string controllerName = "BranchEmployee";
    ViewBag.ControllerName = controllerName;
    ViewBag.MainTitle = "Branch's";
    ViewBag.Title = "All Employees";
}

<a href="@Url.Action("EmployeeRegistration")" class="btn btn-primary m-b-20">
    <i class="icon-plus mr-1"></i> Add Employee
</a>

<div class="row clearfix">
    <div class="col-lg-12">
        <div class="card">
            <div class="body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-hover dataTable js-exportable">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>
                                    Branch Name
                                </th>
                                <th>
                                    Full Name
                                </th>
                                <th>
                                    Contact No
                                </th>
                                <th>
                                    Photo
                                </th>
                                <th>
                                    Email
                                </th>
                                <th>
                                    Designation
                                </th>
                                <th>Action's</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Count(); i++)
                            {
                                var item = Model.ElementAt(i);
                                <tr>
                                    <td>@(i + 1)</td> <!-- Serial Number Column -->
                                    <td>
                                        @Html.DisplayFor(modelItem => item.tblBranch.BranchName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ContactNo)
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.Photo))
                                        {
                                            <img src="@Url.Content(item.Photo)" class="img-fluid circle" alt="Employee Photo" style="width:auto;height:auto;max-width:60px;max-height:auto;" />
                                        }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Designation)
                                    </td>
                                    <td>
                                        <a href="@Url.Action("EmployeeUpdation", new { id = item.EmployeeID })" class="btn btn-sm btn-icon btn-pure btn-default on-default m-r-5 button-edit" data-toggle="tooltip" data-original-title="Update">
                                            <i class="icon-pencil"></i>
                                        </a>
                                        <a href="@Url.Action("ViewProfile", new { id = item.EmployeeID })" class="btn btn-sm btn-icon btn-pure btn-default on-default m-r-5 button-info" data-toggle="tooltip" data-original-title="View Profile">
                                            <i class="icon-info"></i>
                                        </a>
                                        @{
                                            if (item.UserID == 0)
                                            {
                                                <a href="@Url.Action("CreateUser", "UserSetting", new { employeeid = item.EmployeeID })" class="btn btn-sm btn-icon btn-pure btn-default on-default m-r-5 button-info" data-toggle="tooltip" data-original-title="Create">
                                                    <i class="icon-plus mr-1"></i> Create User
                                                </a>
                                            }
                                            else
                                            {
                                                <a href="@Url.Action("UpdateUser", "UserSetting", new { userid = item.UserID })" class="btn btn-sm btn-icon btn-pure btn-default on-default m-r-5 button-info" data-toggle="tooltip" data-original-title="Update">
                                                    <i class="icon-refresh mr-1"></i> Update User
                                                </a>
                                            }
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Sr.No</th>
                                <th>
                                    @Html.DisplayNameFor(model => model.tblBranch.BranchName)
                                </th>
                                <th>
                                    Full Name
                                </th>
                                <th>
                                    Contact No
                                </th>
                                <th>
                                    Photo
                                </th>
                                <th>
                                    Designation
                                </th>
                                <th>
                                    User
                                </th>
                                <th>Action's</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
