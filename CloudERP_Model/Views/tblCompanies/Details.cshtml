@model DatabaseAccess.tblCompany

@{
    string controllerName = "tblCompanies";
    ViewBag.ControllerName = controllerName;
    string actionaName = "Index";
    ViewBag.ActionaName = actionaName;
    ViewBag.MainTitle = "All Companies";
    ViewBag.Title = "Company Details";
}

<div class="row clearfix">
    <div class="col-lg-12">
        <div class="card">
            <div class="body">
                <div class="container">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="mb-3">
                                @if (!string.IsNullOrEmpty(Model.Logo))
                                {
                                    <img src="@Url.Content(Model.Logo)" alt="Company Logo" class="img-fluid rounded" style="max-width: 320px; height: auto;" />
                                }
                                else
                                {
                                    <img src="~/Content/Template/assets/images/No_image.png" alt="Company Logo" class="img-fluid rounded" style="max-width: 320px; height: auto;" />
                                }
                            </div>
                        </div>

                        <div class="col-md-8">
                            <div class="d-flex align-items-center justify-content-between">
                                <h2 class="mb-0">@Html.DisplayFor(model => model.Name)</h2>
                                <a href="@Url.Action("Edit", "tblCompanies", new { id = Model.CompanyID })" class="btn btn-primary ml-3">
                                    <i class="icon-pencil mr-2"></i> Edit info
                                </a>
                            </div>
                            <dl class="dl-horizontal mt-4">
                                <dt class="mt-2">
                                    <strong>Company Description</strong>
                                </dt>
                                <dd class="mt-1">
                                    @Html.DisplayFor(model => model.Name)
                                </dd>

                                <dt class="mt-3">
                                    <strong>Company Details</strong>
                                </dt>
                                <dd class="mt-1">
                                    <!-- Add any additional company details here -->
                                    <p>Additional details can be displayed here.</p>
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
