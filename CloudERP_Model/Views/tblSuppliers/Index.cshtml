@model IEnumerable<DatabaseAccess.tblSupplier>

@{
    string controllerName = "tblSuppliers";
    ViewBag.ControllerName = controllerName;
    ViewBag.MainTitle = "Supplier's";
    ViewBag.Title = "All Branch Suppliers";
}

<div class="row clearfix">
    <div class="col-lg-12">
        <div class="card">
            <div class="body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-hover dataTable js-exportable">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>
                                    Company
                                </th>
                                <th>
                                    Branch
                                </th>
                                <th>
                                    Supplier Name
                                </th>
                                <th>
                                    Contact No
                                </th>
                                <th>
                                    Email
                                </th>
                                <th>
                                    Address
                                </th>
                                <th>
                                    Add (by)
                                </th>
                                <th>
                                    Actiion's
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Count(); i++)
                            {
                                var item = Model.ElementAt(i);
                                <tr>
                                    <td>@(i + 1)</td> <!-- Serial Number Column -->
                                    <td>
                                        @Html.DisplayFor(modelItem => item.tblCompany.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.tblBranch.BranchName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SupplierName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SupplierConatctNo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SupplierEmail)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SupplierAddress)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.tblUser.UserName)
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Edit", new { id = item.SupplierID })" class="btn btn-sm btn-icon btn-pure btn-default on-default m-r-5 button-edit" data-toggle="tooltip" data-original-title="Update">
                                            <i class="icon-pencil" aria-hidden="true"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Sr.No</th>
                                <th>
                                    Company
                                </th>
                                <th>
                                    Branch
                                </th>
                                <th>
                                    Supplier Name
                                </th>
                                <th>
                                    Contact No
                                </th>
                                <th>
                                    Email
                                </th>
                                <th>
                                    Address
                                </th>
                                <th>
                                    User
                                </th>
                                <th>
                                    Actiion's
                                </th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
