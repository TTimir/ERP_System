@model IEnumerable<DatabaseAccess.tblBranch>

@{
    string controllerName = "tblBranches";
    ViewBag.ControllerName = controllerName;
    ViewBag.MainTitle = "Branches";
    ViewBag.Title = "Sub Branchs List";
}

<div class="row clearfix">
    <div class="col-lg-12">
        <div class="card">
            <div class="body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-hover dataTable js-exportable">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>
                                    Branch Level
                                </th>
                                <th>
                                    Branch Name
                                </th>
                                <th>
                                    Contact No
                                </th>
                                <th>
                                    Branch Address
                                </th>
                                <th>Action's</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Count(); i++)
                            {
                                var item = Model.ElementAt(i);
                                <tr>
                                    <td>@(i + 1)</td> <!-- Serial Number Column -->
                                    <td>
                                        @Html.DisplayFor(modelItem => item.tblBranchType.BranchType)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.BranchName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.BranchContact)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.BranchAddress)
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Edit", new { id = item.BranchID })" class="btn btn-sm btn-icon btn-pure btn-default on-default m-r-5 button-edit" data-toggle="tooltip" data-original-title="Update">
                                            <i class="icon-pencil"></i>
                                        </a>
                                        @*<a href="@Url.Action("Details", new { id = item.BranchID })" class="btn btn-sm btn-icon btn-pure btn-default on-default m-r-5 button-info" data-toggle="tooltip" data-original-title="Details">
                                                <i class="icon-info"></i>
                                            </a>*@
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Sr.No</th>
                                <th>
                                    Branch Level
                                </th>
                                <th>
                                    Branch Name
                                </th>
                                <th>
                                    Contact No
                                </th>
                                <th>
                                    Branch Address
                                </th>
                                <th>Action's</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
