@model IEnumerable<DatabaseAccess.tblFinancialYear>

@{
    string controllerName = "tblFinancialYears";
    ViewBag.ControllerName = controllerName;
    ViewBag.MainTitle = "Financial Year Op";
    ViewBag.Title = "All Financial Years";
}

<a href="@Url.Action("Create")" class="btn btn-primary m-b-20">
    <i class="icon-plus mr-1"></i> Add Financial Year
</a>

<div class="row clearfix">
    <div class="col-lg-12">
        <div class="card">
            <div class="body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-hover dataTable js-exportable">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>
                                    Financial Year
                                </th>
                                <th>
                                    Start Date
                                </th>
                                <th>
                                    End Date
                                </th>
                                <th>
                                    Status
                                </th>
                                <th>
                                    Add (by)
                                </th>
                                <th>Action's</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Count(); i++)
                            {
                                var item = Model.ElementAt(i);
                                <tr>
                                    <td>@(i + 1)</td> <!-- Serial Number Column -->
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FinancialYear)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.StartDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EndDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IsActive)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.tblUser.UserName)
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Delete", new { id = item.FinancialYearID })" class="btn btn-sm btn-icon btn-pure btn-default on-default m-r-5 button-delete" data-toggle="tooltip" data-original-title="Remove">
                                            <i class="icon-trash"></i>
                                        </a>
                                        @*<a href="@Url.Action("Details", new { id = item.FinancialYearID })" class="btn btn-sm btn-icon btn-pure btn-default on-default m-r-5 button-info" data-toggle="tooltip" data-original-title="Details">
                                                <i class="icon-info"></i>
                                            </a>*@
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Sr.No</th>
                                <th>
                                    Financial Year
                                </th>
                                <th>
                                    Start Date
                                </th>
                                <th>
                                    End Date
                                </th>
                                <th>
                                    Status
                                </th>
                                <th>
                                    Created by
                                </th>
                                <th>Action's</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
