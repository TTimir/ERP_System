@model DatabaseAccess.tblUser

@{
    string controllerName = "tblUsers";
    ViewBag.ControllerName = controllerName;
    string actionaName = "Index";
    ViewBag.ActionaName = actionaName;
    ViewBag.MainTitle = "All Users";
    ViewBag.Title = "User Details";
}

<div class="row clearfix">
    <div class="col-lg-12">
        <div class="card">
            <div class="body">
                <dl class="row">
                    <dt class="col-sm-3 font-weight-bold">
                        @Html.DisplayNameFor(model => model.FullName)
                    </dt>

                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.FullName)
                    </dd>

                    <dt class="col-sm-3 font-weight-bold">
                        @Html.DisplayNameFor(model => model.Email)
                    </dt>

                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Email)
                    </dd>

                    <dt class="col-sm-3 font-weight-bold">
                        @Html.DisplayNameFor(model => model.ContactNo)
                    </dt>

                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.ContactNo)
                    </dd>

                    <dt class="col-sm-3 font-weight-bold">
                        @Html.DisplayNameFor(model => model.UserName)
                    </dt>

                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.UserName)
                    </dd>

                    <dt class="col-sm-3 font-weight-bold">
                        @Html.DisplayNameFor(model => model.Password)
                    </dt>

                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Password)
                    </dd>

                    <dt class="col-sm-3 font-weight-bold">
                        @Html.DisplayNameFor(model => model.IsActive)
                    </dt>

                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.IsActive)
                    </dd>

                    <dt class="col-sm-3 font-weight-bold">
                        @Html.DisplayNameFor(model => model.tblUserType.UserType)
                    </dt>

                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.tblUserType.UserType)
                    </dd>

                </dl>


                <p>
                    <a href="@Url.Action("Edit", "tblUsers", new { id = Model.UserID })" class="btn btn-primary ml-3">
                        Edit info
                    </a>
                    <a href="@Url.Action("Index", "tblUsers")" class="btn btn-default">
                        <i class="feather icon-arrow-left mr-2"></i> Back
                    </a>
                </p>

            </div>
        </div>
    </div>
</div>