@model IEnumerable<DatabaseAccess.tblStock>

@{
    string controllerName = "tblStocks";
    ViewBag.ControllerName = controllerName;
    ViewBag.MainTitle = "Stock's";
    ViewBag.Title = "All Stock Details";
}

<a href="@Url.Action("Create")" class="btn btn-primary m-b-20">
    <i class="icon-plus mr-1"></i> Add Stock
</a>

<div class="row clearfix">
    <div class="col-lg-12">
        <div class="card">
            <div class="body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-hover dataTable js-exportable">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>
                                    Category
                                </th>
                                <th>
                                    Item's
                                </th>
                                <th>
                                    Current Qty
                                </th>
                                <th>
                                    Expiry Date
                                </th>
                                <th>
                                    Manufacture Date
                                </th>
                                <th>
                                    Status
                                </th>
                                <th>Action's</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Count(); i++)
                            {
                                var item = Model.ElementAt(i);
                                <tr>
                                    <td>@(i + 1)</td> <!-- Serial Number Column -->
                                    <td>
                                        @Html.DisplayFor(modelItem => item.tblCategory.categoryName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ProductName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Quantity)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ExpiryDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Manufacture)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IsActive)
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Edit", new { id = item.ProductID })" class="btn btn-sm btn-icon btn-pure btn-default on-default m-r-5 button-edit" data-toggle="tooltip" data-original-title="Update">
                                            <i class="icon-pencil" aria-hidden="true"></i>
                                        </a>
                                        <a href="@Url.Action("Details", new { id = item.ProductID })" class="btn btn-sm btn-icon btn-pure btn-default on-default m-r-5 button-info" data-toggle="tooltip" data-original-title="Item Details">
                                            <i class="icon-info" aria-hidden="true"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Sr.No</th>
                                <th>
                                    Category
                                </th>
                                <th>
                                    Item's
                                </th>
                                <th>
                                    Current Qty
                                </th>
                                <th>
                                    Expiry Date
                                </th>
                                <th>
                                    Manufacture Date
                                </th>
                                <th>
                                    Status
                                </th>
                                <th>Action's</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
